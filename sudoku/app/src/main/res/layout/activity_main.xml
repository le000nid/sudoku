<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.OwnActivity"
    >

    <ImageView
        android:id="@+id/sukl"
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="415dp"
        app:srcCompat="@drawable/sukl" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="409dp"
        android:layout_alignTop="@+id/BoardView"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="180dp"
        app:srcCompat="@drawable/sakura" />

    <com.example.sudoku.view.custom.BoardView
        android:id="@+id/BoardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="180dp"
        />

    <GridLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="4"
        android:layout_alignParentBottom="true"
        android:paddingBottom="8dp"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/button1"
            android:layout_margin="2dp"
            android:layout_width="95dp"
            android:layout_height="50dp"
            android:text="1"
            android:textSize="18dp"
            android:layout_row="0"
            android:layout_column="0"/>
        <Button
            android:id="@+id/button2"
            android:layout_margin="2dp"
            android:layout_width="95dp"
            android:layout_height="50dp"
            android:text="2"
            android:textSize="18dp"
            android:layout_row="0"
            android:layout_column="1" />
        <Button
            android:id="@+id/button3"
            android:layout_margin="2dp"
            android:layout_width="95dp"
            android:layout_height="50dp"
            android:text="3"
            android:textSize="18dp"
            android:layout_row="0"
            android:layout_column="2" />
        <Button
            android:id="@+id/button4"
            android:layout_margin="2dp"
            android:layout_width="95dp"
            android:layout_height="50dp"
            android:text="4"
            android:textSize="18dp"
            android:layout_row="1"
            android:layout_column="0" />
        <Button
            android:id="@+id/button5"
            android:layout_margin="2dp"
            android:layout_width="95dp"
            android:layout_height="50dp"
            android:text="5"
            android:textSize="18dp"
            android:layout_row="1"
            android:layout_column="1" />
        <Button
            android:id="@+id/button6"
            android:layout_margin="2dp"
            android:layout_width="95dp"
            android:layout_height="50dp"
            android:text="6"
            android:textSize="18dp"
            android:layout_row="1"
            android:layout_column="2"/>
        <Button
            android:id="@+id/button7"
            android:layout_margin="2dp"
            android:layout_width="95dp"
            android:layout_height="50dp"
            android:text="7"
            android:textSize="18dp"
            android:layout_row="2"
            android:layout_column="0" />
        <Button
            android:id="@+id/button8"
            android:layout_margin="2dp"
            android:layout_width="95dp"
            android:layout_height="50dp"
            android:text="8"
            android:textSize="18dp"
            android:layout_row="2"
            android:layout_column="1" />
        <Button
            android:id="@+id/button9"
            android:layout_margin="2dp"
            android:layout_width="95dp"
            android:layout_height="50dp"
            android:text="9"
            android:textSize="18dp"
            android:layout_row="2"
            android:layout_column="2" />

        <Button
            android:id="@+id/buttonDel"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/ic_keyboard_backspace_black_24dp" />
        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="50dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="3"
            android:onClick="addDialog"
            android:drawableLeft="@drawable/ic_lightbulb_outline_black_24dp"/>
    </GridLayout>

</RelativeLayout>